{% extends "layouts/base.html.twig" %}

{% block title %}
	<title>Liste des voeux</title>
{% endblock %}

{% block body %}
	<h1>Wish index</h1>
    <div class="row">
        {% for label,messages in app.flashes %}
            {% for message in messages %}
            <span class="alert alert-{{label}}"> {{message}}</span>
            {% endfor %}
        {% endfor %}
    </div>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
				<th>Author</th>
				<th>IsPublished</th>
				<th>DateCreated</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for wish in wishes %}
				<tr>
					<td>{{ wish.id }}</td>
					<td>{{ wish.title }}</td>
					<td>{{ wish.description }}</td>
					<td>{{ wish.author }}</td>
					<td>{{ wish.isPublished ? 'Yes' : 'No' }}</td>
					<td>{{ wish.dateCreated ? wish.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('app_wish_show', {'id': wish.id}) }}"><i class="fa-solid fa-eye"></i></a>
						<a class="btn btn-warning" href="{{ path('app_wish_edit', {'id': wish.id}) }}"><i class="fa-solid fa-pen"></i></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_new_wish') }}">Create new</a>
{% endblock %}
