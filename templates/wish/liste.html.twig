{% extends "layouts/base.html.twig" %}

{% block title %}
	Liste
{% endblock %}

{% block body %}
	<h1>Liste</h1>
	{{dump( wishList)}}
	<p>
		{# Conditionnelle d'affichage sur le nombre de voeux #}
		<br>
		{% if wishList|length == 0 %}
		Votre liste ne comporte aucun voeux.
		<br>
		{% else %}
		La liste de souhait comporte {{ wishList|length }} voeux.
		<br>
		Les voicis :
		
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>Author</th>
					<th>Category</th>
					{# <th>IsPublished</th> #}
					{# <th>DateCreated</th> #}
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for wish in wishList %}
				{# {% if wish.isPublished %} #}
				<tr>
					<td>{{ wish.id }}</td>
					<td>{{ wish.title }}</td>
					<td>{{ wish.description }}</td>
						<td>{{ wish.author }}</td>
						<td>
							{% if wish.category is not null %}
							{{ wish.category.name }}
							{% else %}
							<span> Aucune cat√©gorie </span>
							{% endif %}
						</td>
						{# <td>{{ wish.isPublished ? 'Yes' : 'No' }}</td> #}
						{# <td>{{ wish.dateCreated ? wish.dateCreated|date('Y-m-d H:i:s') : '' }}</td> #}
						<td>
							<a class="btn btn-primary" href="{{ path('app_wish_show', {'id': wish.id}) }}">
								<i class="fa-solid fa-eye"></i>
							</a>
							<a class="btn btn-warning" href="{{ path('app_wish_edit', {'id': wish.id}) }}">
								<i class="fa-solid fa-pen"></i>
							</a>
						</td>
					</tr>
					{# {% endif %} #}
					{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{% endif %}
	</p>
	{% endblock %}
	